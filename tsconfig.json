{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/util/data/wordlist-5_5K.txt"
  ]
}
